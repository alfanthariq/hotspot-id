<?xml version="1.0" encoding="utf-8"?>
<agency.tango.materialintroscreen.parallax.ParallaxLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:paddingBottom="90dp"
    android:orientation="vertical"
    android:gravity="center|top"
    >

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/third_slide_buttons"
        android:text="Wedi Ireng Beach, Banyuwangi"
        android:textSize="10sp"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:id="@+id/locationSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/third_slide_buttons"
        android:text="Jawa Timur, Indonesia"
        android:textSize="12sp"
        android:layout_marginTop="3dp"
        />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/wedi_ireng"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Please grant a permission"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        />

</agency.tango.materialintroscreen.parallax.ParallaxLinearLayout>
